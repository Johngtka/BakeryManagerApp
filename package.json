{
  "name": "bakery-manage-app",
  "version": "0.0.7",
  "scripts": {
    "ng": "ng",
    "start": "ng serve -c development",
    "prebuild": "standard-version",
    "build": "ng build -c production --base-href https://johngtka.github.io/BakeryManagerApp/",
    "postbuild": "git push --follow-tags && npx angular-cli-ghpages --dir=dist/bakery-manage-app",
    "watch": "ng build --watch --configuration development",
    "format": "prettier --write ./**/*.{ts,json,html,css}",
    "test": "ng test",
    "prepare": "husky install"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.0.1",
    "@angular/cdk": "^17.3.10",
    "@angular/common": "^18.0.1",
    "@angular/compiler": "^18.0.1",
    "@angular/core": "^18.0.1",
    "@angular/forms": "^18.0.1",
    "@angular/material": "^17.3.10",
    "@angular/platform-browser": "^18.0.1",
    "@angular/platform-browser-dynamic": "^18.0.1",
    "@angular/router": "^18.0.1",
    "@ngneat/until-destroy": "^10.0.0",
    "@ngx-translate/core": "^15.0.0",
    "@ngx-translate/http-loader": "^8.0.0",
    "@types/pdfmake": "^0.2.7",
    "date-fns": "^2.30.0",
    "pdfmake": "^0.2.7",
    "rxjs": "^7.8.1",
    "standard-version": "^9.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.6"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.2",
    "@angular/cli": "~18.0.2",
    "@angular/compiler-cli": "^18.0.1",
    "@types/jasmine": "~4.3.0",
    "husky": "^8.0.3",
    "jasmine-core": "~4.5.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "lint-staged": "^13.2.2",
    "typescript": "~5.4.5"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  }
}