{
    "name": "bakery-manage-app",
    "version": "0.0.14",
    "scripts": {
        "ng": "ng",
        "start": "ng serve -c development",
        "prebuild": "standard-version",
        "build": "ng build -c production --base-href https://johngtka.github.io/BakeryManagerApp/",
        "postbuild": "git push --follow-tags && npx angular-cli-ghpages --dir=dist/bakery-manage-app",
        "watch": "ng build --watch --configuration development",
        "format": "prettier --write ./**/*.{ts,json,html,css}",
        "test": "ng test",
        "prepare": "husky install"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^19.2.15",
        "@angular/cdk": "^18.1.3",
        "@angular/common": "^19.2.15",
        "@angular/compiler": "^19.2.15",
        "@angular/core": "^19.2.15",
        "@angular/forms": "^19.2.15",
        "@angular/material": "^18.1.3",
        "@angular/platform-browser": "^19.2.15",
        "@angular/platform-browser-dynamic": "^19.2.15",
        "@angular/router": "^19.2.15",
        "@ngneat/until-destroy": "^10.0.0",
        "@ngx-translate/core": "^15.0.0",
        "@ngx-translate/http-loader": "^8.0.0",
        "@types/pdfmake": "^0.2.7",
        "date-fns": "^2.30.0",
        "pdfmake": "^0.2.7",
        "prettier": "^3.6.2",
        "rxjs": "^7.8.1",
        "standard-version": "^9.5.0",
        "tslib": "^2.3.0",
        "zone.js": "~0.15.1"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^19.2.17",
        "@angular/cli": "~19.2.17",
        "@angular/compiler-cli": "^19.2.15",
        "@types/jasmine": "~4.3.0",
        "husky": "^8.0.3",
        "jasmine-core": "~4.5.0",
        "karma": "~6.4.0",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage": "~2.2.0",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "~2.0.0",
        "lint-staged": "^13.2.2",
        "typescript": "~5.8.3"
    },
    "lint-staged": {
        "*.ts": [
            "prettier --write"
        ]
    }
}
